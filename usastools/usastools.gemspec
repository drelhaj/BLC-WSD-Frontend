
Gem::Specification.new do |s|
  # About the gem
  s.name        = 'usastools'
  s.version     = '0.2.2'
  s.date        = '2013-11-27'
  s.summary     = 'USAS tools'
  s.description = 'A set of tools for working with formats from the USAS semantic analysis system'
  s.author      = 'Stephen Wattam'
  s.email       = 'stephenwattam@gmail.com'
  s.homepage    = 'http://ucrel.lancs.ac.uk/usas/'
  s.required_ruby_version =  ::Gem::Requirement.new(">= 1.9.1")
  s.license     = 'Same as USAS'
  
  # Files + Resources
  s.files         = Dir.glob("lib/**/*.rb") + Dir.glob("resources/*")
  s.require_paths = ['lib', 'resources']
  
  # Documentation
  s.has_rdoc         = true 

  # Deps
  # s.add_runtime_dependency 'msgpack',       '~> 0.5'
end

